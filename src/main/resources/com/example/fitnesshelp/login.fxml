<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitnesshelp.Login">
   <children>
      <AnchorPane prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #231717;">
         <children>
            <Label fx:id="title" layoutX="14.0" layoutY="31.0" text="Fitness Helper" textFill="WHITE">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label fx:id="welcome" layoutX="14.0" layoutY="14.0" text="Welcome to" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="email" layoutX="265.0" layoutY="234.0" text="Email">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="password" layoutX="253.0" layoutY="272.0" text="Password">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="buttonCreateAccount" layoutX="355.0" layoutY="354.0" mnemonicParsing="false" onAction="#clickedOnButtonCreateAccount" prefHeight="29.0" prefWidth="114.0" style="-fx-background-color: #231717;" text="Create account" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="buttonLogin" layoutX="385.0" layoutY="309.0" mnemonicParsing="false" onAction="#clickedOnButtonLogin" style="-fx-background-color: #231717;" text="Login" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextField fx:id="emailField" layoutX="338.0" layoutY="231.0" />
      <TextField fx:id="passwordField" layoutX="338.0" layoutY="269.0" />
      <Hyperlink fx:id="homeHyperlink" layoutX="47.0" layoutY="108.0" onAction="#clickedOnHomeHyperlink" text="Home" />
      <ImageView fx:id="homeImageView" fitHeight="38.0" fitWidth="33.0" layoutX="14.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../home.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
