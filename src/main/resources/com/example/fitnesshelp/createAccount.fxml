         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Hyperlink fx:id="homeHyperlink" layoutX="44.0" layoutY="110.0" onAction="#clickedOnButtonHomeHyperlink" text="Home">
         <font>
            <Font size="14.0" />
         </font></Hyperlink>
      <ImageView fx:id="homeImageView" fitHeight="38.0" fitWidth="33.0" layoutX="14.0" layoutY="107.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../home.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
