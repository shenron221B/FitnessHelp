<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fitnesshelp.CreateAccount">
   <children>
      <AnchorPane prefHeight="100.0" prefWidth="800.0" style="-fx-background-color: #231717;">
         <children>
            <Label fx:id="title" layoutX="14.0" layoutY="31.0" text="Fitness Helper" textFill="WHITE">
               <font>
                  <Font size="26.0" />
               </font>
            </Label>
            <Label fx:id="welcome" layoutX="14.0" layoutY="14.0" text="Welcome to" textFill="WHITE">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="email" layoutX="278.0" layoutY="281.0" text="Email">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="password" layoutX="265.0" layoutY="320.0" text="Password">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="name" layoutX="276.0" layoutY="200.0" text="Name">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="surname" layoutX="267.0" layoutY="238.0" text="Surname">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
